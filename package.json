  "private": true,
  "dependencies": {
    "react": "^16.11.0",
    "react-dom": "^16.11.0",
    "react-scripts": "^3.2.0"
  },
  "main": "src/electron-starter.js",
  "homepage": "./",
  "scripts": {
    "build:style": "tailwind build src/css/index.css -o src/css/tailwind.css",
